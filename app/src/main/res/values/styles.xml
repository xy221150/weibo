<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Purple"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/tengluoPurple</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Red"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/cloudRed</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Grey"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/Grey</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Pink"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/biliPink</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Green"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/grassGreen</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.seaBlue"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/seaBlue</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Brown"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/coffeeBrown</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Orange"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/lemonOrange</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self.Gray"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/startSkyGray</item>
    </style>
    <style name="BiLiPinkTheme" parent="AppThemeNoActionBar">
        <item name="colorPrimary">@color/biliPink</item>
        <item name="colorPrimaryDark">@color/biliPink50</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self.Pink</item>

    </style>

    <style name="KuAnGreenTheme" parent="AppThemeNoActionBar">
        <item name="colorPrimary">@color/kuanGreen</item>
        <item name="colorPrimaryDark">@color/kuanGreen</item>
